#!/bin/bash

#
#   Env
#

export JAVA_HOME=/usr/lib64/openjdk-8

#
#   Path
#

export PATH=$PATH:$JAVA_HOME/bin

#
#   Prompt
#

blue='\[\033[01;35m\]'
clear='\[\033[0m\]'
export PS1="${blue}\W ${clear}\$ "


#
#   Aliases
#

alias topdf='lowriter --convert-to pdf'
alias c='code-oss'


#
#   Functions
#

# goto example.com
goto() {
  for x in "$@"; do
    ( firefox "$x" >/dev/null 2>&1 & )
  done
}

# search "foo bar"
search() {
  if [ "$1" != "" ]; then
    q=$(echo "$1" | sed s/" "/+/g)
    ( firefox https://www.google.co.uk/search?q="$q" >/dev/null 2>&1 & )
  fi
}

# rmspaces *.pdf
rmspaces() {
  for f in "$@"; do
    dir=$(dirname "$f")
    bn=$(basename "$f")
    bnFormatted=$(echo "$bn" | tr " " _)

    mv "$f" "$dir"/$bnFormatted
  done
}

# zipdir mydir
zipdir() {
  for f in "$@"; do
    zip -r "$f" "$f"
  done
}